{
  "separate-pull-requests": true,
  "packages": {
    "android": {
      "release-type": "simple",
      "package-name": "android-app",
      "extra-files": [
        {
          "type": "json",
          "path": "version.json",
          "jsonpath": "$.version"
        }
      ]
    },
    "ios": {
      "release-type": "simple",
      "package-name": "ios-app",
      "extra-files": [
        {
          "type": "yaml",
          "path": "project.yml",
          "jsonpath": "$.targets.App.settings.base.marketingVersion"
        }
      ]
    }
  },
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
